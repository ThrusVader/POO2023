package exercicios;

import java.util.Scanner;

public class Veiculo {
	String placa;
	String tipoCombustivel;
	double valor;
	int opc;

	public static void main(String[] args) {
		Tela();
		System.out.println("\n\t\t\t Gas Station");
		Tela();
		
		Opcoes();
	}

	public static void Menu() {
		Scanner ler	= new Scanner (System.in);
		int opc;
		switch (opc) {
		case 1:
			System.out.println("Informe o nº da placa:");
			String placa = ler.next();
			break;
		case 2:
			System.out.println("Você escolheu Flex!");
			break;
		case 3:
			System.out.println("Você escolheu Gasolina!");
			break;
		case 4:
			System.out.println("Você escolheu Gás!");
			break;
		case 5:
			System.out.println("Informe o valor do carro:");
			double valor = ler.nextDouble();
			break;

		default:
			System.out.println("Opção inválida!");
			break;
		}

	}

	public static void Opcoes() {

		System.out.println("\n 1 - Placa \n");
		System.out.println("\n Tipo de Combustível \n");
		System.out.println("\n 2 - Flex \n");
		System.out.println("\n 3 - Gasolina \n");
		System.out.println("\n 4 - Gás \n");
		System.out.println("\n ____________________ \n");		
		System.out.println("\n 5 - Valor do carro \n");
	}

	public static void Tela() {
		for (int i = 0; i < 1; i++) {
			System.out.println("______________________________________________________________");
		}

	}

}
